@page
@model Basketball_Academy_Management_System.Pages.ParentPortalModel
@{
    var player = Model.CurrentPlayer;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Basketball Academy</title>

    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@@4"></script>
</head>
<body>
    <div class="max-w-5xl mx-auto space-y-12 p-12">
        <div class="bg-gradient-to-br from-orange-600 to-pink-700 rounded-3xl p-12 text-center shadow-2xl">
            <img src="@player.Photo" class="w-40 h-40 rounded-full mx-auto ring-8 ring-white/30 object-cover" />
            <h1 class="text-6xl font-black mt-6">@player.Name</h1>
            <p class="text-2xl opacity-90 mt-2">@player.Position • Age @player.Age</p>
            <span class="inline-block mt-4 px-6 py-3 bg-green-500/30 rounded-full text-green-300 font-bold">Active Player</span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-green-600/20 border-4 border-green-500 rounded-3xl p-10 text-center">
                <p class="text-5xl font-black text-green-400">@Model.AttendancePercentage%</p>
                <p class="text-2xl font-bold mt-4">Attendance</p>
            </div>
            <div class="bg-blue-600/20 border-4 border-blue-500 rounded-3xl p-10 text-center">
                <p class="text-5xl font-black text-blue-400">RWF @Model.Payments.Sum(p => p.Amount)</p>
                <p class="text-2xl font-bold mt-4">Total Paid</p>
            </div>
            <div class="bg-purple-600/20 border-4 border-purple-500 rounded-3xl p-10 text-center">
                <p class="text-5xl font-black text-purple-400">Excellent</p>
                <p class="text-2xl font-bold mt-4">Coach Rating</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-white/5 rounded-2xl p-6 border">
                <h2 class="text-2xl font-bold mb-4">Recent Attendance</h2>
                <ul class="space-y-3">
                    @foreach (var a in Model.Attendance)
                    {
                        <li class="flex justify-between items-center p-3 bg-gray-800/60 rounded-lg">
                            <div>
                                <div class="font-semibold">@a.Date.ToString("yyyy-MM-dd")</div>
                                <div class="text-sm text-gray-400">@(a.Status)</div>
                            </div>
                            <div class="text-lg font-bold">@(a.Status)</div>
                        </li>
                    }
                </ul>
            </div>

            <div class="bg-white/5 rounded-2xl p-6 border">
                <h2 class="text-2xl font-bold mb-4">Payments</h2>
                <table class="w-full text-left">
                    <thead>
                        <tr>
                            <th class="pb-2">Date</th>
                            <th class="pb-2">Amount</th>
                            <th class="pb-2">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pay in Model.Payments)
                        {
                            <tr class="border-t">
                                <td class="py-2">@pay.Date.ToString("yyyy-MM-dd")</td>
                                <td class="py-2">RWF @pay.Amount</td>
                                <td class="py-2">@pay.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-red-400">@Model.ErrorMessage</div>
        }
    </div>
</body>

