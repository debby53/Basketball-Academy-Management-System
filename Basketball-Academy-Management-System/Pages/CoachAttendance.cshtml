@page
@model Basketball_Academy_Management_System.Pages.CoachAttendanceModel
@{
}
<h1 class="text-5xl font-black mb-8 bg-gradient-to-r from-orange-500 to-red-500 bg-clip-text text-transparent">
    Today's Attendance
</h1>

<form asp-action="SaveAttendance" method="post" class="bg-black/60 backdrop-blur-2xl rounded-3xl p-10 border border-orange-500/40">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 mb-5">
        @foreach (var player in Model.PlayerList)
        {
            <label class="cursor-pointer group">
                <input type="checkbox" name="presentIds" value="@player.Id" class="sr-only peer" checked />
                <div class="bg-gray-800/80 rounded-3xl p-6 text-center border-4 border-transparent peer-checked:border-green-500 peer-checked:bg-green-500/20 transition-all hover:border-orange-500 hover:scale-105">
                    <img src="@(player.Photo ?? "/images/player1.jpg")" class="w-24 h-24 rounded-full mx-auto ring-4 ring-white/20 object-cover" />
                    <p class="mt-4 font-bold text-lg">@player.Name</p>
                    <p class="text-orange-400 text-sm">@player.Position</p>
                    @* <div class="mt-3 text-3xl">Present</div> *@
                </div>
            </label>
        }
    </div>
    <button type="submit" class="mt-10 bg-gradient-to-r from-green-500 to-emerald-600 p-4 rounded-2xl text-xl font-bold hover:scale-105 transition">
        Save Attendance
    </button>
</form>