@page
@model Basketball_Academy_Management_System.Pages.Account.LoginModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Basketball Academy</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Custom styles to center the login form on the screen */
        body {
            background-color: #f8f9fa; /* Light background */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .login-card {
            width: 100%;
            max-width: 400px; /* Standard width for login forms */
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="text-center mb-4">
            <h1 class="h3 mb-0 fw-bold text-primary">🏀 Academy Login</h1>
            <p class="text-muted">Access your management portal.</p>
        </div>

        <div class="card shadow">
            <div class="card-body p-5">

                <form method="post">

                    <div class="mb-3">
                        <label for="InputEmail" class="form-label fw-bold">Email / Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user text-secondary"></i></span>
                            <input type="text" id="InputEmail" name="Input.Email" class="form-control" placeholder="Enter your email" required autofocus>
                        </div>
                        @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@
                    </div>

                    <div class="mb-4">
                        <label for="InputPassword" class="form-label fw-bold">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock text-secondary"></i></span>
                            <input type="password" id="InputPassword" name="Input.Password" class="form-control" placeholder="Password" required>
                        </div>
                        @* <span asp-validation-for="Input.Password" class="text-danger"></span> *@
                    </div>


                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger p-2 mb-3 small">@Model.ErrorMessage</div>
                    }

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                        Log In <i class="fas fa-sign-in-alt ms-1"></i>
                    </button>

                    <hr class="my-4">

                    <div class="text-center">
                        <a href="#" class="text-muted small">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>